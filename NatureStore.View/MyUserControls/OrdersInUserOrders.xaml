<UserControl x:Class="NatureStore.View.MyUserControls.OrdersInUserOrders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NatureStore.View.MyUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="70" />
        </Grid.ColumnDefinitions>

        <Label Content="{Binding OrderNum}" Grid.Column="0" Style="{StaticResource productLabel}"/>
        <Label Content="{Binding Prod}" Grid.Column="1" Style="{StaticResource productLabel}"/>
        <Label Content="{Binding Quantity}" Grid.Column="2" Style="{StaticResource productLabel}"/>
        <Label Content="{Binding OrderDate}" Grid.Column="3" Style="{StaticResource productLabel}" />
        <Label Content="{Binding Price}" Grid.Column="4" Style="{StaticResource productLabel}" />
    </Grid>
</UserControl>
