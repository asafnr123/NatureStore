<UserControl x:Class="NatureStore.View.MyUserControls.AdminUserControls.UserDropMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NatureStore.View.MyUserControls.AdminUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="105">
    <Grid Background="#FF97BFDE">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Name="allUsersLbl" Style="{StaticResource categoryLabel}" Grid.Row="0" Content="All Users" Margin="3" FontSize="13" MouseDown="allUsersLbl_MouseEnter"  />
        <Label Name="addUserLbl" Style="{StaticResource categoryLabel}" Grid.Row="1" Content="Add User" Margin="3" FontSize="13" MouseDown="addUserLbl_MouseDown"/>
        <Label Name="removeUserLbl" Style="{StaticResource categoryLabel}" Grid.Row="2" Content="Remove User" Margin="3" FontSize="13" MouseDown="removeUserLbl_MouseDown"/>
    </Grid>
</UserControl>
