<UserControl x:Class="NatureStore.View.MyUserControls.AdminUserControls.StocksDropMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NatureStore.View.MyUserControls.AdminUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="105">
    <Grid Background="#FF97BFDE">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Name="allStocks" Style="{StaticResource categoryLabel}" Content="All Stocks" Padding="23,13,0,0" Grid.Row="0" Margin="4" FontSize="14" MouseDown="allStocks_MouseDown" />
        <Label Name="Add" Style="{StaticResource categoryLabel}" Content="Add" Grid.Row="1" Padding="33,13,0,0" Margin="4" FontSize="14" MouseDown="Add_MouseDown"/>
        <Label Name="Edit" Style="{StaticResource categoryLabel}" Content="Edit" Grid.Row="2" Padding="33,13,0,0" Margin="4" FontSize="14" MouseDown="" />
    </Grid>
</UserControl>
