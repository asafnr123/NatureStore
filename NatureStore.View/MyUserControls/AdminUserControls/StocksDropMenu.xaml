<UserControl x:Class="NatureStore.View.MyUserControls.AdminUserControls.StocksDropMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NatureStore.View.MyUserControls.AdminUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="105">
    <Grid Background="#FF97BFDE">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Name="allStocks" Style="{StaticResource categoryLabel}" Content="All Stocks" Padding="19,13,0,0" Grid.Row="0" Margin="4" FontSize="15" MouseDown="allStocks_MouseDown" />
        <Label Name="newStock" Style="{StaticResource categoryLabel}" Content="New Stock" Grid.Row="1" Padding="17,13,0,0" Margin="4" FontSize="15" MouseDown="newStock_MouseDown"/>
        <Label Name="editStock" Style="{StaticResource categoryLabel}" Content="Edit Stock" Grid.Row="2" Padding="19,13,0,0" Margin="4" FontSize="15" MouseDown="editStock_MouseDown"/>
    </Grid>
</UserControl>
