<UserControl x:Class="NatureStore.View.MyUserControls.AdminUserControls.CategorysDropMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NatureStore.View.MyUserControls.AdminUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="105">
    <Grid Background="#FF97BFDE">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Name="allCateLbl" Style="{StaticResource categoryLabel}" Content="All Categorys" Grid.Row="0" Margin="4" FontSize="13" MouseDown="allCateLbl_MouseDown" />
        <Label Name="addCateLbl" Style="{StaticResource categoryLabel}" Content="Add Category" Grid.Row="1" Margin="4" FontSize="13" MouseDown="addCateLbl_MouseDown"/>
        <Label Name="removeCateLbl" Style="{StaticResource categoryLabel}" Content="Remove Category" Grid.Row="2" Margin="4" FontSize="13" MouseDown="removeCateLbl_MouseDown" />
    </Grid>
</UserControl>
