<UserControl x:Class="NatureStore.View.MyUserControls.DropMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NatureStore.View.MyUserControls"
             
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="100">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Name="protein" Content="Protein" Grid.Row="0" Style="{StaticResource categoryLabel}" Padding="25,13,0,0" MouseDown="protein_MouseDown"/>
        <Label Name="snacks" Content="Snacks" Grid.Row="1" Style="{StaticResource categoryLabel}" Padding="25,13,0,0" MouseDown="snacks_MouseDown"/>
        <Label Name="vitamins" Content="Vitamins" Grid.Row="2" Style="{StaticResource categoryLabel}" Padding="20,13,0,0" MouseDown="vitamins_MouseDown"/>
        <Label Name="creatine" Content="Creatine" Grid.Row="3" Style="{StaticResource categoryLabel}" Padding="20,13,0,0" MouseDown="creatine_MouseDown"/>

    </Grid>
</UserControl>
