<Window x:Class="NatureStore.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" ResizeMode="CanMinimize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Background="#FF2A507D">
            <Label Content="The Nature Store" Style="{StaticResource header}" Margin="265,15,0,0"/>
        </WrapPanel>
        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" Name="MainFrame" Source="/Pages/Login/LoginPage.xaml" />


    </Grid>
</Window>
