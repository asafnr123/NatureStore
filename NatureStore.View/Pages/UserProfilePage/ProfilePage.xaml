<Page x:Class="NatureStore.View.Pages.UserProfilePage.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NatureStore.View.Pages.UserProfilePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid Background="#FF4387D6">

        <StackPanel Width="300" Height="190" HorizontalAlignment="Left" Margin="20,0,0,150" Background="LightGray" >
            <Label Name="usernameLbl" Content="Username:  " Style="{StaticResource labels}" Margin="5"  />
            <Label Name="addressLbl" Content="Address:  " Style="{StaticResource labels}" Margin="5" />
            <Label Name="cityLbl" Content="City:  " Style="{StaticResource labels}" Margin="5" />
            <Label Name="countryLbl" Content="Country:  " Style="{StaticResource labels}" Margin="5" />
        </StackPanel>
    </Grid>
</Page>
