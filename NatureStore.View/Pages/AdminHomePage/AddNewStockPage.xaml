<Page x:Class="NatureStore.View.Pages.AdminHomePage.AddNewStockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NatureStore.View.Pages.AdminHomePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddNewStockPage">

    <Grid Background="LightGray">
        <Border Name="editingBorder" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Grid.Column="1"  Width="375" Height="200" HorizontalAlignment="Center"  >
            <WrapPanel Name="editingWP" Background="DarkGray">
                <Label Name="prodIdLbl" Style="{StaticResource labels}" Content="Product Id :" Margin="10"/>
                <TextBox Name="prodIdTxt" Style="{StaticResource userInput }" Width="160" Margin="-100,0,0,80" />

                <Label Name="quantLbl" Style="{StaticResource labels}" Content="Quantity :" Margin="-160,75,0,0" />
                <TextBox Name="quantTxt" Style="{StaticResource userInput }" Width="160" TextWrapping="Wrap" Margin="-160,55,0,0" />

                <Button Name="submitBtn" Style="{StaticResource regularBtn}" Content="Submit" Width="100" Margin="-40,150,0,0" Click="submitBtn_Click" />
            </WrapPanel>
        </Border>
    </Grid>
</Page>
