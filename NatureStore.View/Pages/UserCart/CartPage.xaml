<Page x:Class="NatureStore.View.Pages.UserCart.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NatureStore.View.Pages.UserCart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CartPage">

    <Grid Background="#FF4387D6">
        <Label Content="You'r Cart" Style="{StaticResource header}" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="125,10,0,0"/>
        <StackPanel Name="cartSP" Background="#D9D9D9" Orientation="Vertical" Width="300" Height="300" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,60,0,0">
            <Label Content="Empty" Style="{StaticResource labels}" Margin="0,140,0,0" HorizontalAlignment="Center" />
        </StackPanel>
        <StackPanel Name="removeSP" Width="50" Height="300" Margin="0,20,70,0"/>
    </Grid>
</Page>
