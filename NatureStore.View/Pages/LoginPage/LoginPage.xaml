<Page x:Class="NatureStore.View.Pages.LoginPage.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NatureStore.View.Pages.LoginPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Border CornerRadius="7" BorderBrush="Black" Background="Gray" Width="400" Height="250" BorderThickness="2">
            <WrapPanel Width="300" Height="250" VerticalAlignment="Center">
                <Label Content="Email:" Style="{StaticResource labels}" Margin="20,30,0,0" />
                <TextBox x:Name="EmailTxt" Style="{StaticResource userInput}" Margin="-35,70,0,0" />

                <Label Content="Password:" Style="{StaticResource labels}" Margin="20,10,0,0"  />
                <PasswordBox x:Name="PassTxt" Style="{StaticResource passInput}" Margin="-60,50,0,0" />

                <Button Content="Login" Style="{StaticResource loginBtn}" Margin="20,30,0,0" />
                <Button Content="Register" Style="{StaticResource regularBtn}" Margin="10,30,0,0" Name="registerBtn"/>

            </WrapPanel>
        </Border>
    </Grid>
</Page>
