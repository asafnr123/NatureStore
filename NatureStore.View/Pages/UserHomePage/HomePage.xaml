<Page x:Class="NatureStore.View.Pages.UserHomePage.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NatureStore.View.Pages.UserHomePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid >
        <Label Content="Welcome User" Style="{StaticResource header}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15" FontSize="22"/>
        <WrapPanel Width="400" Height="320" HorizontalAlignment="Left" Margin="15,0,0,50">
            <TextBlock FontFamily="Bahnschrift" FontSize="19" TextWrapping="Wrap" Padding="20" >
                Welcome to The Nature Store <LineBreak/>
                Where you can buy the healthiest products in a really good price <LineBreak/><LineBreak/>
                Here, In The Nature Store, we have a variety of products such as: <LineBreak/>
                • Protein Powder <LineBreak/>
                • Protein Snacks <LineBreak/>
                • Vitamins <LineBreak/>
                • Creatine <LineBreak/><LineBreak/>
                Stay Healthy!
            </TextBlock>
        </WrapPanel>
    </Grid>
</Page>
